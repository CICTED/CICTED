@model CICTED.Domain.ViewModels.Account.RegistrarViewModel
@{
    Layout = "_CICTED";
}

<title>Registro - CICTED</title>


<form class="form-cadastro !important" asp-controller="account" asp-action="registrar" method="post"> 
    <div style="margin-left:-15px">
        <h1>Registrar</h1>
    </div>
    <div class="margin-top-10 row">
        <label>Nome:</label>
        <input type="text" class="form-control" asp-for="Nome" value="@Model.Nome" />
    </div>

    <div class="margin-top-10 row">
        <label>Sobrenome:</label>
        <input type="text" class="form-control" asp-for="Sobrenome" value="@Model.Sobrenome" />
    </div>

    <div class="margin-top-10 row">
        <label>CPF:</label>
        <input type="text" class="form-control" asp-for="CPF" value="@Model.CPF" />
    </div>

    <div class="margin-top-10 row">
        <label>Outros Documentos(RG, Passaporte, Etc):</label>
        <input type="text" class="form-control" asp-for="Documento" value="@Model.Documento" />
    </div>

    <div class="margin-top-10 row">
        <div class="float-left">
            <label>Data de Nascimento:</label>
            <input type="date" class="form-control" asp-for="DataNascimento" value="@Model.DataNascimento" />
        </div>

        <div class="float-right">
            <label>Gênero: </label>
            <select class="form-control" asp-for="Genero" value="@Model.Genero">
                <option value="-1">Selecione um genero</option>
                <option value="false">Masculino</option>
                <option value="true">Feminino</option>
            </select>
        </div>
    </div>

    <div class="margin-top-10 row">
        <label>Endereço:</label>
        <input type="text" class="form-control" asp-for="Endereco" value="@Model.Endereco" />
    </div>

    <div class="margin-top-10 row">
        <label>Bairro:</label>
        <input type="text" class="form-control" asp-for="Bairro" value="@Model.Bairro" />
    </div>

    <div class="margin-top-10 row">
        <label>CEP:</label>
        <input type="text" class="form-control" asp-for="CEP" value="@Model.CEP" />
    </div>

    <div class="margin-top-10 row">
        <div class="float-left">
            <label>Estado:</label>
            <select class="form-control" id="dropEstados" asp-for="Estado" value="@Model.EstadoID">
                <option value="-1">Selecione seu estado</option>
                @foreach (var estado in Model.Estados)
                {
                    if (estado.Id == Model.Estado)
                    {
                        <option value="@estado.Id" selected>@estado.Sigla</option>

                    }
                    else
                    {
                        <option value="@estado.Id">@estado.Sigla</option>
                    }
                }
            </select>
        </div>


        <div class="float-right">
            <label>Cidade: </label>
            <select class="form-control" id="dropCidade" asp-for="CidadeNome" value="@Model.CidadeId">
                <option value="-1">Selecione sua cidade</option>
                @if (Model.CidadeId > 0)
                {
                    <option value="@Model.CidadeId" selected>@Model.CidadeNome</option>

                }
            </select>
        </div>
    </div>

    <div class="margin-top-10 row">
        <label>Telefone:</label>
        <input type="tel" class="form-control" asp-for="Telefone" value="@Model.Telefone" />
    </div>

    <div class="margin-top-10 row">
        <label>Celular:</label>
        <input type="text" class="form-control" asp-for="Celular" value="@Model.Celular" />
    </div>

    <div class="margin-top-10 row">
        <label>Instituição:</label>
        <select class="form-control">
            <option value="-1">Selecione sua instituição</option>
        </select>
    </div>

    <div class="margin-top-10 row">
        <label>Você está cursando?</label>
        <input type="radio" value="false" asp-for="Estudante"/>Não
        <input type="radio" value="true" asp-for="Estudante"/>Sim
    </div>

    <div class="margin-top-10 row">
        <label>Curso:</label>
        <input type="text" class="form-control"/>
    </div>

    <div class="margin-top-10 row">
        <label>Você é bolsista?</label>
        <input type="radio" value="false" asp-for="Bolsista"/>Não
        <input type="radio" value="true" asp-for="Bolsista"/>Sim
    </div>

    <div class="margin-top-10 row">
        <label>Agência financiadora*:</label>
        <select class="form-control">
            <option value="-1">Selecione a agência financiadora</option>
        </select>
    </div>

    <div class="margin-top-10 row">
        <label>Email Principal:</label>
        <input type="text" class="form-control" asp-for="EmailPrincipal" value="@Model.EmailPrincipal" disabled="false"/>
    </div>

    <div class="margin-top-10 row">
        <label>Email Secundario:</label>
        <input type="text" class="form-control" asp-for="EmailSecundario" value="@Model.EmailSecundario"/>
    </div>

    <div class="margin-top-10 row">
        <label>Senha:</label>
        <input type="password" class="form-control" asp-for="Senha" value="@Model.Senha" />
    </div>

    <div class="margin-top-10" align="center">
        <button type="submit" class="btn btn-primary">Voltar</button>
        <button type="submit" class="btn btn-primary">Cadastrar</button>
    </div>
    <div class="row margin-top-10">
        Já está cadastrado? <a asp-controller="account" asp-action="login" class="links hover-from-center">Clique aqui para entrar.</a>
    </div>
</form>

<script type="text/javascript">
    $('#dropEstado').states($('#dropCidade'));
</script>

