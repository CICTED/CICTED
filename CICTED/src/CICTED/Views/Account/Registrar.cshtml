@model CICTED.Domain.ViewModels.Account.RegistrarViewModel
@{
    Layout = "_CICTED";
}

<title>Registro - CICTED</title>


<form class="form-cadastro !important">
    <div style="margin:0 auto">
        <h1>Registrar</h1>
    </div>
    <div class="form-group">
        <h4>Dados Pessoais:</h4>
        <div class="margin-top-10 row">
            <div class="float-left" style="width:40%">
                <label>Nome:</label>
                <input type="text" name="Nome" value="@Model.Nome" />
            </div>
            <div class="float-right" style="width:50%">
                <label>Sobrenome:</label>
                <input type="text" name="Sobrenome" value="@Model.Sobrenome" />
            </div>
        </div>

        <div class="margin-top-10 row">
            <div class="float-left" style="width:40%">
                <label>CPF:</label>
                <input type="text" name="CPF" value="@Model.CPF" />
            </div>

            <div class="float-right" style="width:50%">
                <label>Outros Documentos(RG, Passaporte, Etc):</label>
                <input type="text" name="Documento" value="@Model.Documento" />
            </div>
        </div>

        <div class="margin-top-10 row">
            <div class="float-left" style="width:40%">
                <label>Data de Nascimento:</label>
                <input type="date" name="DataNascimento" value="@Model.DataNascimento" />
            </div>

            <div class="float-right" style="width:50%">
                <label>Gênero: </label>
                <select class="form-control" name="Genero" value="@Model.Genero">
                    <option value="-1">Selecione um genero</option>
                    <option value="false">Masculino</option>
                    <option value="true">Feminino</option>
                </select>
            </div>
        </div>

        <div class="margin-top-10 row">
            <div class="float-left" style="width:40%">
                <label>Telefone:</label>
                <input type="tel" name="Telefone" value="@Model.Telefone" />
            </div>

            <div class="float-right" style="width:50%">
                <label>Celular:</label>
                <input type="text" name="Celular" value="@Model.Celular" />
            </div>
        </div>

        <div class="margin-top-10 row">
            <div class="float-left" style="width:40%">
                <label>Email Principal:</label>
                <input type="text" asp-for="EmailPrincipal" value="@Model.EmailPrincipal" disabled="false" />
            </div>

            <div class="float-right" style="width:50%">
                <label>Email Secundario:</label>
                <input type="text" asp-for="EmailSecundario" value="@Model.EmailSecundario" />
            </div>
        </div>
    </div>

    <hr />

    <div class="form-group">
        <h4>Endereço:</h4>
        <div class="margin-top-10 row">
            <div class="float-left" style="width:40%">
                <label>Logradouro:</label>
                <input type="text" name="Endereco" value="@Model.Endereco" />
            </div>

            <div class="float-right" style="width:50%">
                <label>Bairro:</label>
                <input type="text" name="Bairro" value="@Model.Bairro" />
            </div>
        </div>

        <div class="margin-top-10 row">
            <label>CEP:</label>
            <input type="text" name="CEP" value="@Model.CEP" />
        </div>

        <div class="margin-top-10 row">
            <div class="float-left" style="width:40%">
                <label>Estado:</label>
                <select class="form-control" id="dropEstados" name="Estado" value="@Model.EstadoID">
                    <option value="-1">Selecione seu estado</option>
                    @foreach (var estado in Model.Estados)
                    {
                        if (estado.Id == Model.Estado)
                        {
                            <option value="@estado.Id" selected>@estado.Sigla</option>
                        }
                        else
                        {
                            <option value="@estado.Id">@estado.Sigla</option>
                        }
                    }
                </select>
            </div>

            <div class="float-right" style="width:50%">
                <label>Cidade: </label>
                <select class="form-control" id="dropCidade" name="CidadeNome" value="@Model.CidadeId">
                    <option value="-1">Selecione sua cidade</option>
                    @if (Model.CidadeId > 0)
                    {
                        <option value="@Model.CidadeId" selected>@Model.CidadeNome</option>

                    }
                </select>
            </div>
        </div>
    </div>

    <hr />

    <div class="form-group">
        <h4>Educacional:</h4>
        <div class="margin-top-10 row">
            <label>Instituição:</label>
            <select class="form-control">
                <option value="-1">Selecione sua instituição</option>
            </select>
        </div>

        <div class="form-group margin-top-10">
            <div class="float-left" style="width:40%">
                <label>Está cursando?</label>
                <div class="onoffswitch margin-right-10 float-left">
                    <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="checkEstudante" asp-for="Estudante" checked="@((Model.Estudante) ? true : false)">
                    <label class="onoffswitch-label" for="checkEstudante">
                        <span class="onoffswitch-inner"></span>
                        <span class="onoffswitch-switch"></span>
                    </label>
                </div>
                <div id="estudante" style="display: none;">
                    <div class="float-right row">
                        <label>Curso:</label>
                        <input type="text" />
                    </div>
                </div>
            </div>

            <div class="float-right" style="width:50%">
                <label>Você é bolsista?</label>
                <div class="onoffswitch margin-right-10">
                    <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="checkBolsista" asp-for="Bolsista" checked="@((Model.Bolsista) ? true : false)">
                    <label class="onoffswitch-label" for="checkBolsista">
                        <span class="onoffswitch-inner"></span>
                        <span class="onoffswitch-switch"></span>
                    </label>
                </div>
                <div id="bolsista" style="display: none;">
                    <div class="float-left row">
                        <label>Agência financiadora:</label>
                        <select class="form-control">
                            <option value="-1">Selecione a agência financiadora</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="margin-top-10" align="center">
        <button type="submit" class="btn btn-primary" asp-controller="account" asp-action="login" method="get">Cancelar</button>
        <button type="submit" class="btn btn-primary" asp-controller="account" asp-action="registrar" method="post">Cadastrar</button>
    </div>
    
</form>

<script type="text/javascript">
    $('#dropEstado').states($('#dropCidade'));

    $("#checkBolsista").on("change", function () {
        if ($(this).is(":checked")) {
            $("#bolsista").css("display", "block");
        } else {
            $("#bolsista").css("display", "none");

        }
    });

    $("#checkEstudante").on("change", function () {
        if ($(this).is(":checked")) {
            $("#estudante").css("display", "block");
        } else {
            $("#estudante").css("display", "none");

        }
    });
</script>

