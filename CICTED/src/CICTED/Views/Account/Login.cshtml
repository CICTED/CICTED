@model CICTED.Domain.Infrastucture.ViewModels.Account.LoginViewModel

@{
    Layout = null;
}
<html>
<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/font-awesome.css" />

    <title>Login - CICTED</title>
</head>
<body>
    <div class="float-center margin-top-50 logo-login"></div>

    <div class="margin-top-100" style="width: 794px; margin: 0 auto; height: 100%;">

        <form class="form-login float-left margin-left-50">
            <h1>Login</h1>
            <div class="row margin-top-10" style="height:30px !important; ">
                <span class="fa fa-user float-left font-size-15"></span>
                <input class="float-right margin-left-20" placeholder="Email" />
            </div>
                <div class="row margin-top-20" style="height:30px !important;">
                    <span class="fa fa-key float-left font-size-15"></span>
                    <input class="float-right margin-left-10" placeholder="Senha" />
                </div>
                <div class="row margin-top-20 ">
                    <button type="submit" class="btn btn-primary float-center" style="width: 100%">Entrar</button>
                </div>

            <div class="checkbox">
                <label asp-for="RememberMe">
                    <input asp-for="RememberMe" />
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>
</form>


        <div class="float-left margin-left-10">
            <form style="padding:0px 20px 0px 20px; height: 255px !important" class="form-login float-left margin-left-50">
                <h1>Ainda não tem cadastro?</h1>
                <div class="row margin-top-10 " style="height:30px !important; ">
                    <span class="fa fa-user float-left font-size-15"></span>
                    <input class="float-right margin-left-20" placeholder="Email" />
                </div>
                <div class="row margin-top-20 " style="height:30px !important;">
                    <span class="fa fa-key float-left font-size-15"></span>
                    <input type="password" class="float-right margin-left-10" placeholder="Senha" />
                </div>
                <div class="row margin-top-20 " style="height:30px !important;">
                    <span class="fa fa-check float-left font-size-15"></span>
                    <input type="password" class="float-right margin-left-10" placeholder="Confirme sua senha" />
                </div>
                <div class="row margin-top-10 ">
                    <button type="submit" class="btn btn-primary float-center" style="width: 100%">Cadastrar</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
