@model CICTED.Domain.ViewModels.Account.RecuperarSenhaViewModel

@{
    Layout = null;
}

<html>
<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/font-awesome.css" />

    <title>Recuperar Senha - CICTED</title>
</head>
<body>

    <div class="float-center margin-top-50 logo-login"></div>

    <div class="margin-top-100" style="width: 794px; margin: 0 auto; height: 100%;">
        <form style="padding-top:2px" class="form-login" asp-controller="Account" asp-action="RecuperarSenha" method="post">

            <h1 class="margin-top-10">Recuperar Senha</h1>

            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert alert-warning" role="alert">@ViewBag.Message</div>
            }
            <h4>Informe o email para a recuperação da conta.</h4>

            @if (!string.IsNullOrEmpty(ViewBag.Success))
            {
                <div class="alert alert-success" role="alert">@ViewBag.Success</div>
            }

            <input style="width:100%" type="email" asp-for="Email" />
            <button style="width:100%" type="submit" class="margin-top-10 btn btn-primary">Enviar</button>
        </form>
    </div>

</body>
</html>