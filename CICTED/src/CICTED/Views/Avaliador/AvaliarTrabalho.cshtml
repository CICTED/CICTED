@model CICTED.Domain.ViewModels.Avaliador.AvaliaTrabalhoViewModel
@{
    Layout = "_Menu";
}
<title>Avaliar Trabalho - CICTED</title>

<form class="form-avaliar-trabalho" method="post">
    <div>
        <h2><span class="fa fa-clipboard"></span><b> Avaliar Trabalho</b></h2>
    </div>

    <div class="form-group">

        <div class="margin-top-10 row">
            <div class="float-left" style="width:40%">
                <label>Identificação: </label>
                <input type="text" class="form-control" style="width:120px" value="@Model.IdentificacaoTrabalho" name="identificacaoTrabalho" disabled />
            </div>

            <div class="form-group float-right ">
                <div class="form-group float-left">
                    <label>Nota:</label>
                    <input class="form-control" style="width:60px" value="@Model.Nota" name="nota" type="text" disabled/>
                </div>
                <div id="emoji" class="form-group float-right margin-left-30">
                    <span class="fa fa-meh-o fa-5x"></span>

                </div>
            </div>

        </div>

        <div class="row">
            <div class="float-left">
                <label>Resumo: </label>
                <input type="text" class="input-consulta-trab-adm" style="width:60px" value="@Model.NotaResumo" name="notaResumo"/>
            </div>

            <div class="float-left" style="margin-left:-30px">
                <label>Objetivo: </label>
                <input type="text" class="input-consulta-trab-adm" style="width:60px" value="@Model.NotaObjetivo" name="notaObjetivo" />
            </div>

            <div class="float-left" style="margin-left:-30px">
                <label>Metodologia: </label>
                <input type="text" class="input-consulta-trab-adm" style="width:60px" value="@Model.NotaMetodologia" name="notaMetodologia" />
            </div>

            <div class="float-left" style="margin-left:-50px">
                <label>Resultados: </label>
                <input type="text" class="input-consulta-trab-adm" style="width:60px" value="@Model.NotaResultado" name="notaResultado" />
            </div>
        </div>



        <div class="margin-top-10 row">
            <label>Observações: </label>
            <div class="on-focus clearfix">
                <textarea class="textarea-avaliador" style="height:100px; resize:none" value="@Model.Comentario" name="comentario"></textarea>
            </div>
        </div>

        <div class="form-group float-right margin-top-20">
            <button type="submit" class="btn btn-primary">Avaliar</button>
        </div>
    </div>


</form>